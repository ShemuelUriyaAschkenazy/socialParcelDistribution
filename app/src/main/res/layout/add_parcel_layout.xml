<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="textStart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:showDividers="middle"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/parcel_type"
                android:textSize="18sp"
                />

            <RadioGroup
                android:visibility="visible"
                android:id="@+id/rg_parcelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp">

                <RadioButton
                    android:id="@+id/rb_envelope"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/envelope"
                    android:cursorVisible="true"
                    />

                <RadioButton
                    android:id="@+id/rb_smallPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/small_package" />

                <RadioButton
                    android:id="@+id/rb_bigPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/big_package" />
            </RadioGroup>

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </Spinner>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:baselineAligned="false"
                    android:text="@string/fragility"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_fragility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_Fragile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/rb_notFragile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/no" />

                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:hint="@string/weight_in_grams"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:hint="@string/for_auto_calculation_leave_empty"
                android:layout_marginTop="20dp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="5dp"
                android:text="@string/recipient_details"
                android:textSize="18sp"
                />

            <EditText
                android:id="@+id/et_recipient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:hint="@string/name"
                />

            <EditText
                android:id="@+id/et_recipient_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:textSize="15sp"
                android:hint="@string/phone"
                android:layout_marginTop="20dp"
                android:inputType="number" />


            <EditText
                android:id="@+id/et_recipient_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:hint="@string/address"
                />


            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/recipient_email"
                android:textSize="18sp" /!-->

            <EditText
                android:id="@+id/et_recipient_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:paddingBottom="16dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:hint="@string/mail"
                android:inputType="textEmailAddress"
                />

            <Button
                android:id="@+id/btn_addParcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/add"
                android:textSize="20sp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>